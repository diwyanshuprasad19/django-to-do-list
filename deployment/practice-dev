# HTTP server
server {
    listen 80;
    server_name 3.93.215.185; 
    location /static/ {
        alias /home/ubuntu/django-to-do-list/static/;  # Ensure this path matches STATIC_ROOT in Django settings
    }

    # Redirect HTTP to HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}

# HTTPS server
server {
    listen 443 ssl;
    server_name 3.93.215.185;

    ssl_certificate /etc/nginx/ssl/nginx-selfsigned.crt;
    ssl_certificate_key /etc/nginx/ssl/nginx-selfsigned.key;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;

    location /static/ {
        alias /home/ubuntu/django-to-do-list/static/;  # Ensure this path matches STATIC_ROOT in Django settings
    }

    location /media/ {
        alias /home/ubuntu/django-to-do-list/media/;  # Add if you serve media files
    }

    location / {
        proxy_pass http://unix:/home/ubuntu/django-to-do-list/run/gunicorn.sock;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

